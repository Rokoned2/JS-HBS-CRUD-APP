{{#if this}}
            <h2>Edit User</h2>
            <form id="edit-user-form" class="form">
                <input type="file" class="filepond" name="profileImage" />
                <div class="form-group my-3">
                    <label for="inputName">Name</label>
                    <input type="text" class="form-control my-2" placeholder="Enter name" name="name" value={{this.name}}
                        id="name" />
                </div>
                <div class="form-group my-3">
                    <label for="inputUsername">Username</label>
                    <input type="text" class="form-control my-2" value={{this.username}} name="username" id="username"
                        placeholder="Enter username" />
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        {{else}}
            <h2>Add User</h2>
            <form id="add-user-form" class="form">
                <input type="file" class="filepond" name="profileImage" />
                <div class="form-group my-3">
                    <label for="inputName">Name</label>
                    <input type="text" class="form-control my-2" placeholder="Enter name" name="name" value=""
                        id="name" />
                </div>
                <div class="form-group my-3">
                    <label for="inputUsername">Username</label>
                    <input type="text" class="form-control my-2" value="" name="username" id="username"
                        placeholder="Enter username" />
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>

        {{/if}}
