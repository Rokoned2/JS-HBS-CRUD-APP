<div class="row">
        <div class="col col-lg my-4">
{{#if displayAddUser}}
            <h2>Add User</h2>
            <form id="add-user-form" class="form">
                <input type="file" class="filepond" name="profileImage" />
                <div class="form-group my-3">
                    <label for="inputName">Name</label>
                    <input type="text" class="form-control my-2" placeholder="Enter name" name="name" value=""
                        id="name" />
                </div>
                <div class="form-group my-3">
                    <label for="inputUsername">Username</label>
                    <input type="text" class="form-control my-2" value="" name="username" id="username"
                        placeholder="Enter username" />
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>

        {{else}}
            <h2>Edit User</h2>
            <form id="edit-user-form" class="form">
                <input type="file" class="filepond" name="profileImage" />
                <div class="form-group my-3">
                    <label for="inputName">Name</label>
                    <input type="text" class="form-control my-2" placeholder="Enter name" name="name" value=""
                        id="name" />
                </div>
                <div class="form-group my-3">
                    <label for="inputUsername">Username</label>
                    <input type="text" class="form-control my-2" value="" name="username" id="username"
                        placeholder="Enter username" />
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        {{/if}}
            <div class="col col-lg my-4">
                <table class="table table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th score="col">Image</th>
                            <th score="col">Name</th>
                            <th score="col">Username</th>
                            <th score="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="users-list">
                        {{#if users}}
                        {{#each users}}
                        <tr>
                            <td>
                                <img width="90" src={{profileImagePath}}>
                            </td>
                            <td>
                                {{name}}
                            </td>
                            <td>
                                {{username}}
                            </td>
                            <td class="d-flex">
                                <button id={{id}} type="button" class="mr-2 edit-btn btn btn-primary">
                                    Edit
                                </button>
                                <button id={{id}} type="button" class="mr-2 delete-btn btn
                                                btn-danger">
                                    Delete
                                </button>
                            </td>
                        </tr>

                        {{/each}}
                        <!-- {user: true} -->
                        {{else}}
                        <tr>
                            <td colspan="4">No users</td>
                        </tr>
                        {{/if}}
                    </div>
                    </tbody>
                </table>
            </div>

</div>     